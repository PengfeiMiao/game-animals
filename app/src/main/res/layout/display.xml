<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue">

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="300dp"
        android:layout_marginRight="209dp"
        android:onClick="sel_1"
        android:src="@drawable/bg_blue" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="200dp"
        android:onClick="sel_2"
        android:src="@drawable/bg_blue" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv1"
        android:layout_alignRight="@+id/iv1"
        android:layout_below="@+id/iv2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="120dp"
        android:onClick="sel_3"
        android:src="@drawable/bg_blue" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv3"
        android:layout_alignEnd="@+id/iv2"
        android:layout_alignLeft="@+id/iv2"
        android:layout_alignRight="@+id/iv2"
        android:layout_alignStart="@+id/iv2"
        android:layout_alignTop="@+id/iv3"
        android:onClick="sel_4"
        android:src="@drawable/bg_blue" />

    <TextView
        android:id="@+id/tv_Tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/font_one"
        android:text="TextView"
        android:textAllCaps="true"
        android:textColor="#3399FF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/iv1"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/font_one"
        android:text="Score:0"
        android:textAllCaps="true"
        android:textColor="#3399FF"
        android:textSize="30dp" />

</RelativeLayout>
